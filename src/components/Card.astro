---
const { title, subtitle, url } = Astro.props
---
<a href={`/posts/${url}`} class="drop-shadow-md">
  <div>
    <h2 class="text-3xl group-hover:text-purple-500">{title} &rarr;</h2>
    <p class="text-slate-600 group-hover:text-slate-800">{subtitle}</p>
  </div>
</a>

<style>
a {
  text-decoration: none;
  display: flex;
  width: 100%;
	padding: 0.15rem;
	background-color: white;
  background-image: linear-gradient(45deg, rgb(124, 58, 237), #da62c4 30%, white 60%);
  background-size: 400%;
  border-radius: 0.5rem;
  background-position: 100%;
	transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

a > div {
  /* margin: 3px; */
  width: 100%;
  padding: 1rem 1.3rem;
  border-radius: 0.35rem;
  color: #111;
  background-color: white;
  opacity: 0.8;
}
h2 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
a:hover {
  background-position: 0;
}
a:is(:hover, :focus-within) h2 {
  color: rgb(124, 58, 237);
}
</style>